#
# bspwm hotkeys
#

# Logout
super + alt + Escape
	bspc quit
# lockscreen
super + ctrl + Escape
	gnome-screensaver-command -l

super + w
	bspc window -c

super + t
	bspc desktop -l next

# balance
super + b
	bspc desktop -B

# equalise
super + e
      	bspc desktop -E

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest 

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

# circulate leaves
super + {comma,period}
	bspc desktop -C {backward,forward}

# flip
super + ctrl + {comma,period}
      	bspc desktop -F {horizontal,vertical}

# rotate
super + alt + {comma,period}
      	bspc desktop -R {90,270}

# next/prev desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# next/prev occupied desktop
super + ctrl + bracket{left,right}
	bspc desktop -f {prev.occupied,next.occupied}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

# swap monitors
super + q
      	bspc monitor -s next

~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

# select monitor
super + F{1,2}
      bspc monitor -f {prev,next}

# move window to desktop
alt + F{1,2}
      bspc window --to-desktop {prev,next}

# move window to monitor
ctrl + F{1,2}
      bspc window --to-monitor {prev,next}

# move desktop to monitor
super + alt + F{1,2}
      bspc desktop --to-monitor {prev,next}

#
# wm independent hotkeys
#

super + Return
	lilyterm

super + space
	dmenu_run

super + Escape
	pkill -USR1 -x sxhkd ; \
  pkill -USR1 -x tint2

# open a "scratchpad" terminal
F12
  xdotool search --onlyvisible --classname URxvtQuake windowunmap \
    || xdotool search --classname URxvtQuake windowmap \
    || urxvt -name URxvtQuake -geometry 110x20+297+1

F11
  xdotool search --onlyvisible --name top_menu windowunmap \
    || xdotool search --name top_menu windowmap \
    || lilyterm --title top_menu  --geometry 110x20+297+1

F1
  setxkbmap us

F2
  setxkbmap ru